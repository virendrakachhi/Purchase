<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- <LinearLayout
         android:layout_marginLeft="20dp"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="20dp"
         android:id="@+id/image_layout"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/friends_image"
        android:layout_width="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_height="65dp"
        android:src="@mipmap/notification_bag"/>

    <!--
        </LinearLayout>
    -->

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@+id/friends_image"
        android:id="@+id/text_layout"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/invite_btn"
            android:layout_height="wrap_content"
            android:id="@+id/friends_name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Shoes"
            android:textColor="@android:color/black"/>


        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friends_status"
            android:layout_below="@id/friends_name"
            android:text="Shoes"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/obj_location_icon" />

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/invite_btn"
            android:text="Invite"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</RelativeLayout>
