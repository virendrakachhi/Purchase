<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friends_image"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/notification_bag"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tags"
            android:adjustViewBounds="true"
            android:src="@mipmap/product_tag"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_alignRight="@+id/friends_image"
            android:layout_alignEnd="@+id/friends_image"
            android:layout_marginTop="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/image_layout"
        android:id="@+id/text_layout"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_stream"
            android:textSize="15dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="Shoes"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stream_body"
            android:layout_below="@id/title_stream"
            android:text="Shoes"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/obj_location_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/created_at"
            android:text="Shoes"
            android:textSize="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
</RelativeLayout>
