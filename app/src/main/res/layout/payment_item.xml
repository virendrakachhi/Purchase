<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/image_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/obj_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/notification_bag"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/image_layout"
        android:id="@+id/text_layout"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/obj_name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Shoes"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/obj_date"
            android:layout_below="@+id/obj_name"
            android:textColor="@android:color/black"
            android:text="Purchase Date"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/obj_from"
            android:layout_marginBottom="10dp"
            android:text="nike"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/obj_price"
            android:layout_below="@id/obj_date"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/obj_price"
            android:layout_alignParentRight="true"
            android:layout_below="@id/obj_date"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="7"/>


    </RelativeLayout>
</RelativeLayout>
